// The server-actions config allows using the "tsc" CLI to compile the server actions manually.
{
  "extends": "../../tsconfig-server-base.json",
  "references": [
    { "path": "../../system" },
    { "path": "../../system/server" }
  ],
  "compilerOptions": {
    "rootDir": "../",
    "declarationDir": "./decl",
    "outDir": "./out"
  },
  "include": [
    "../_globals.ts",
    "./_globals.ts",
    "../**/*.shared.ts",
    "../**/*.server.ts"
  ]
}
