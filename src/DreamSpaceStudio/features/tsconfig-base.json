{
  "references": [ { "path": "../solutions/client" } ],
  "compileOnSave": true,
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "incremental": true,
    "outDir": "../public/js",
    "target": "es6",
    "module": "amd",
    "moduleResolution": "node",
    "lib": [ "es6", "dom" ],
    "types": [
      "requirejs",
      "jquery",
      "popper.js",
      "bootstrap"
    ] // (include only types we need; prevents node types from being included)
  }
}
