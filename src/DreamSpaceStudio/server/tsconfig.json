// This has to be in the TypeScript folder to set default TS compiling to be the server, which is the main part of the app.
{
  "compilerOptions": {
    "incremental": true,
    "module": "commonjs",
    "target": "es6",
    "lib": [ "es6" ],
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true,
    "rootDir": "./",
    "declarationDir": "./decl",
    "experimentalDecorators": true,
    "types": [ "debug", "express", "node" ]
  },
  "include": [
    //"server/globals.d.ts",
    "./**/*.ts"
    //"./System/**/*.ts"
  ],
  //"include": [ "Core/Polyfills.ts", "Core/System/Delegate.ts" ],
  "exclude": [
    "node_modules",
    "decl"
  ]
}
