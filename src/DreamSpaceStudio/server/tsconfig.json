// This has to be in the TypeScript folder to set default TS compiling to be the server, which is the main part of the app.
{
  "extends": "../tsconfig-server-base.json",
  "references": [
    { "path": "../system" },
    { "path": "../system/server" }
  ],
  "compilerOptions": {
    "rootDir": "../",
    "declarationDir": "./decl"
  },
  "include": [
    //"server/globals.d.ts",
    "./**/*.ts",
    "../features/**/api/**/*.ts",
    "../features/**/*.shared.ts"
    //"./System/**/*.ts"
  ]
}
