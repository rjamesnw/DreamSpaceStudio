{
  "compileOnSave": true,
  "references": [
    { "path": "../" },
    { "path": "../client" }
  ],
  "compilerOptions": {
    "composite": true,
    "outFile": "plugin.js",
    "incremental": true,
    "target": "es6",
    "lib": [ "es6", "dom" ],
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "noEmitHelpers": true,
    "experimentalDecorators": true,
    "rootDir": "../",
    "types": [ "jquery" ] // (include only types we need; prevents node types from being included)
  }
}
