  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "target": "es6",
    "lib": [ "es6", "dom" ],
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "noEmitHelpers": true,
