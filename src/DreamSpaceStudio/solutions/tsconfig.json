{
  "compileOnSave": true,
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "incremental": true,
    "outFile": "api.js",
    "target": "es6",
    "lib": [ "es6", "dom" ],
    "types": [ "node", "request" ] // (include only types we need; prevents node types from being included)
  },
  "include": [
    "_global.ts", // (make sure this is always first)
    "TrackableObject.ts",
    "DependentObject.ts",
    "VDOM.ts",
    "Templating.ts",
    "Templating.parse.ts",
    "./*.ts",
    "./System/*.ts"
  ],
  "exclude": [
    "node_modules",
    "projects",
    "./*.d.ts"
  ]
}
