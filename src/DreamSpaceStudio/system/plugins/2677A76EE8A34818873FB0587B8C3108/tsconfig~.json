// Handles the global level scripts.
{
  "compileOnSave": true,
  "references": [
    { "path": "../../" }
  ],
  "compilerOptions": {
    "noEmit": true,
    "incremental": true,
    "target": "es6",
    "module": "none",
    "noImplicitAny": true,
    "sourceMap": false,
    "declaration": false,
    "lib": [ "es6", "dom" ],
    "noEmitHelpers": true,
    "experimentalDecorators": true,
    "rootDir": "../../"
  },
  "include": [
    //"./types/**/*.ts",
    "./*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
