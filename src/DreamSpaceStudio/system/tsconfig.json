{
  "compileOnSave": true,
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "incremental": true,
    "outFile": "api.js",
    "target": "ES2017",
    "lib": [ "ES2017", "dom" ],
    "types": [ "node", "request" ] // (include only types we need; prevents node types from being included)
  },
  "include": [
    "_global.ts", // (make sure this is always first)
    "Utilities.ts",
    "Logging.ts",
    "ErrorHandling.ts",
    "Exception.ts",
    "Diagnostics.ts",
    "PersistableObject.ts",
    "TrackableObject.ts",
    "ConfigBaseObject.ts",
    "DependentObject.ts",
    "VDOM.ts",
    "Templating.ts",
    "Templating.parse.ts",
    "StatePromise.ts",
    "./*.ts",
    "abstracts/Events.ts",
    "abstracts/VirtualFileSystem.ts",
    "abstracts/Resrouce.ts",
    "abstracts/Solution.ts",
    "abstracts/Project.ts",
    "./abstracts/*.ts"
  ],
  "exclude": [
    "node_modules",
    "projects",
    "./*.d.ts"
  ]
}
