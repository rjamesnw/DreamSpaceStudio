{
  "compileOnSave": true,
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "ES2017",
    "lib": [ "ES2017" ],
    "module": "commonjs",
    "experimentalDecorators": true,
    "types": [ "debug", "express", "node" ],
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "**/decl"
  ]
}
