{
  "compileOnSave": true,
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "module": "amd",
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "rootDir": "../",
    "outDir": "../../public/js/",
    "declarationDir": "../../public/js/client/decl",
    "lib": [ "es6", "dom" ],
    "noEmitHelpers": true,
    "experimentalDecorators": true,
    "types": [ "jquery" ] // (include only types we need; prevents node types from being included)
  },
  "include": [ "./**/*.ts", "../Core/**/*.ts" ],
  "exclude": [
    "node_modules",
    //"../DreamSpaceJS/**/*.d.ts",
    "decl",
    "Loader.ts",
    "manifest.ts",
    "**/Platform.UI.Bootstrap.ts"
  ]
}
