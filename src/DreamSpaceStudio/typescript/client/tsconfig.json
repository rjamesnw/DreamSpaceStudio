{
  "compileOnSave": true,
  "compilerOptions": {
    "composite": true,
    "target": "es6",
    "module": "amd",
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "rootDir": "../",
    "outDir": "../../public/js/client",
    "lib": [ "es6", "dom" ],
    "noEmitHelpers": true,
    "experimentalDecorators": true
  },
  "include": [ "./**/*.ts", "../DreamSpaceJS/**/*.ts" ],
  "exclude": [
    "node_modules",
    "../DreamSpaceJS/**/*.d.ts",
    "Loader.ts",
    "manifest.ts"
  ]
}
