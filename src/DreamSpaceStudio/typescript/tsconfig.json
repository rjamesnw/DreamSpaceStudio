{
  "compileOnSave": true,
  "compilerOptions": {
    "noEmit": true,
    "declaration": false,
    "incremental": true,
    "target": "es6",
    "lib": [ "es6", "dom" ],
    "types": [ "node", "request" ] // (include only types we need; prevents node types from being included)
  },
  "include": [
    "./*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
