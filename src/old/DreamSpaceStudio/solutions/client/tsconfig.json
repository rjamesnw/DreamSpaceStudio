{
  "references": [ { "path": "../" } ],
  "compileOnSave": true,
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "incremental": true,
    "outFile": "client_api.js",
    "target": "es6",
    "lib": [ "es6", "dom" ],
    "types": [ "node", "request" ] // (include only types we need; prevents node types from being included)
  },
  "include": [
    "Events.ts",
    "./*.ts",
    "./System/*.ts"
  ],
  "exclude": [
    "node_modules",
    "projects",
    "./*.d.ts"
  ]
}
